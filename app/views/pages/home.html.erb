<div class="row">
<div class="col-xs-3 col-md-3 col-sm-3">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag(current_user.avatar.url, height: "150px", width: "100%", crop: "fill", style: "margin-top:-14.5px ") %>

        <p>Username: <%= current_user.username %></p> <br>
        <p>E-mail: <%= current_user.email %></p>

      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-body">
      <div class="row">
        <center>
        <h4> Trending </h4>
      </center>
        <p class="col-sm-8">
          <%= image_tag(@random_post.user.avatar.url, height: "100%", width: "100%", crop: "fill") %>
        </p>
        <p class="col-sm-4">
          <%= @random_post.user.username %>: <br>
          <%= (@random_post.content).truncate_words(5) %>
        </p>
      </div>
      <div class="row">
      <p class="col-sm-8">
        <%= image_tag(@random_post1.user.avatar.url, height: "100%", width: "100%", crop: "fill") %>
      </p>
      <p class="col-sm-4">
        <%= @random_post1.user.username %>: <br>
        <%= (@random_post1.content).truncate_words(5) %>
      </p>
    </div>

      </div>
    </div>
  </div>

  <div class="col-xs-6 col-md-6 col-sm-6">
    <%= render '/components/post_form' %><br><br>
    <% for @p in @posts %>
    <div class="panel panel-default post-panel">
      <div class="panel-body row">
        <div class="col-sm-1">
          <%= image_tag(User.find(@p.user_id).avatar, height: "40", width:"40", crop:"fill", class: "rounded-img") %>
        </div>
        <div class="col-sm-11">
          <p class="post-title"><span class="post-cover"><%= User.find(@p.user_id).username %></span> <span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
          <p class="post-content"><%= @p.content %></p>
        </div>
      <div class="row">
        <div class="col-sm-12">
          <center>
          <p class="post-links row">

          <div class="col-sm-3">
            <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
          </div>
          <div class="col-sm-3">
            <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
          </div>
          </p>
        </center>
        </div>
      </div>

      </div>
    </div>
    <% end %>
  </div>

